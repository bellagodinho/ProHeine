<style>
    .outside-box {
        padding: 16px;
        width: 267px;
        height: 332px;
        background: url(.jpg), #494949;
        box-shadow: 0px 8px 33px rgba(66, 0, 74, 0.27), 0px 3.08148px 10.5111px rgba(66, 0, 74, 0.164), 0px 0.651852px 2.68889px rgba(66, 0, 74, 0.106);
        border-radius: 20px;
    }

    .box-content {
        position: relative;
        top: 131px;
        display: grid;
        grid-template-rows: 25px 25px 87px;
        grid-gap: 16px;
    }

    .green-text {
        font-family: Lato;
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        color: #4CC2A8;
    }
</style>



<div class="outside-box">
    <img src="/images/Classes/@photoName" style="position: absolute; top: 12px; left: -33px;" />
    <div class="box-content">
        <ChipsComponent chipColor="white-chip" chipHeight="25px" chipWidth="max-content">R$@classPrice</ChipsComponent>
        <ChipsComponent chipColor="green-chip" chipHeight="25px" chipWidth="max-content">@classLevel</ChipsComponent>
        <div>
            <h4 style="color: white; margin-bottom: 4px;">@ChildContent</h4>
            <p class="under-text" style="color: white; margin: 0; font-weight: 700;">@classStyle</p>
            <p class="under-text" style="color: white; margin: 0;">@classDate</p>
            <p class="green-text" style=" margin-top: 12px;">Prof @teacherName  | @@@teacherUsername</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string photoName { get; set; } = "Salao.png";
    [Parameter] public string classPrice { get; set; }
    [Parameter] public string classLevel { get; set; } = "Para todos";
    [Parameter] public string classStyle { get; set; } = "Aula online";
    [Parameter] public string classDate { get; set; }
    [Parameter] public string teacherName { get; set; }
    [Parameter] public string teacherUsername { get; set; }
}