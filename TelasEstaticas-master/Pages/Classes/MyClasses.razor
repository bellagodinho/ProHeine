<style>
    /* || PAGE LAYOUT STYLES */
    .page {
        margin-left: var(--sidemenu-collapsed-width);
    }

    header {
        display: flex;
        flex-direction: column;
        padding: 34px 5%;
    }

    .header-bottom {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
    }

    /* || PAGE ELEMENTS STYLES */
    .search-placeholder {
        border-radius: 15px;
        width: max-content;
        max-width: 30%;
        min-height: 3.5rem;
        font: 400 1rem/1.25rem Lato;
    }
</style>

<SideMenuComponent></SideMenuComponent>

